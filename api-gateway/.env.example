# API Gateway Environment Variables
# Copy this file to .env and customize values

# ==================== GATEWAY CONFIGURATION ====================
SERVER_PORT=8080

# ==================== KEYCLOAK CONFIGURATION ====================
# Set to 'true' for production with authentication, 'false' for development
KEYCLOAK_ENABLED=false
KC_REALM=bank-realm
KC_URL=http://keycloak:8180
KC_ISSUER_URI=http://keycloak:8180/realms/bank-realm
KC_JWK_SET_URI=http://keycloak:8180/realms/bank-realm/protocol/openid-connect/certs

# ==================== MICROSERVICES URLs ====================
# Use Docker container names or localhost depending on deployment

# For Docker Compose (container names):
AUTH_SERVICE_URL=http://auth-service:8080
USER_SERVICE_URL=http://user-service:8081
ACCOUNT_SERVICE_URL=http://account-service:8082
PAYMENT_SERVICE_URL=http://payment-service:8083
CRYPTO_SERVICE_URL=http://crypto-service:8085
NOTIFICATION_SERVICE_URL=http://notification-service:8086
AUDIT_SERVICE_URL=http://audit-service:8087
ANALYTICS_SERVICE_URL=http://analytics-service:8088

# For local development (localhost):
# AUTH_SERVICE_URL=http://localhost:8080
# USER_SERVICE_URL=http://localhost:8081
# ACCOUNT_SERVICE_URL=http://localhost:8082
# PAYMENT_SERVICE_URL=http://localhost:8083
# CRYPTO_SERVICE_URL=http://localhost:8085
# NOTIFICATION_SERVICE_URL=http://localhost:8086
# AUDIT_SERVICE_URL=http://localhost:8087
# ANALYTICS_SERVICE_URL=http://localhost:8088

# ==================== REDIS CONFIGURATION ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== LOGGING ====================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_CLOUD_GATEWAY=DEBUG
